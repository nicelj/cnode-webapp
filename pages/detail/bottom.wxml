<template name="bottomsubmit">
  <view class="bottom">
    <input placeholder="回复" disabled="{{!canSubmit}}" style="background:{{isEditing && '#fff'}}" 
    bindinput="beforesubmit" placeholder-style="font-size:14px" bindfocus="focus" bindblur="blur" value="{{inputValue}}"/>
    <text style="color:#6699ff;opacity:0.7;font-size:16px;padding-top:4px" bindtap="submit" >提交</text>
  </view>
</template>